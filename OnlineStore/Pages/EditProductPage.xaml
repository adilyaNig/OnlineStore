<Page x:Class="OnlineStore.Pages.EditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OnlineStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="EditProductPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btnBack" Content="Назад" Grid.Row="0" Grid.Column="0" Click="btnBack_Click"/>
        <Button x:Name="btnDelete" Content="Удалить" Grid.Row="0" Grid.Column="2" 
                HorizontalAlignment="Right" Width="100" Margin="5" Click="btnDelete_Click"/>

        <TextBlock Text="Название:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="tbName" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Описание:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="tbDescription" Grid.Row="2" Grid.Column="1" Margin="5" Height="60" 
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <TextBlock Text="Цена:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="tbPrice" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Категория:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbCategory" Grid.Row="4" Grid.Column="1" Margin="5" DisplayMemberPath="Name"/>

        <TextBlock Text="Кол-во на складе:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="tbQuantity" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Картинка:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="tbImageUrl" Grid.Row="6" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Средний рейтинг:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBlock x:Name="tbRating" Grid.Row="7" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>

        <Button x:Name="btnSave" Content="Сохранить изменения" Grid.Row="7" Grid.Column="2" 
                HorizontalAlignment="Right" Width="150" Margin="5" Click="btnSave_Click"/>
    </Grid>
</Page>
