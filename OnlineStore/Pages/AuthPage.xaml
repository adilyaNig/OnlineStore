<Page x:Class="OnlineStore.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OnlineStore.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBlock Text="Email" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center"/>
		<TextBlock Text="Password" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Center"/>
		<TextBox x:Name="tbEmail" Grid.Column="3" Grid.Row="2"/>
		<PasswordBox x:Name="tbPass" Grid.Column="3" Grid.Row="3"/>
		<Button x:Name="btnLogIn" Content="Log In" Click="btnLogIn_Click" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="4"/>
		
	</Grid>
</Page>
