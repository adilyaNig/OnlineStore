<Page x:Class="OnlineStore.Pages.ReviewsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OnlineStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReviewsPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Product.Name}" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="{Binding Product.AverageRating, StringFormat='Rating: {0:F1}'}"/>
            <ListView x:Name="lvReviews">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="User" DisplayMemberBinding="{Binding User.FirstName}"/>
                        <GridViewColumn Header="Rating" DisplayMemberBinding="{Binding Rating}"/>
                        <GridViewColumn Header="Review" DisplayMemberBinding="{Binding ReviewText}" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Добавить отзыв" Click="btnAddReview_Click" Margin="0,10,0,5"/>
            <Button Content="Назад" Click="btnBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
